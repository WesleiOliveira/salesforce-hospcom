<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Justificativa</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
OR(ISNEW(),ISCHANGED(Prioridade__c)),
TEXT(Prioridade__c) == &apos;REGULARIZAÇÃO&apos;,
Justificativa__c == &apos;&apos;
)</errorConditionFormula>
    <errorDisplayField>Justificativa__c</errorDisplayField>
    <errorMessage>Insira uma justificativa para a solicitação de regularização.</errorMessage>
</ValidationRule>
