<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Bloqueia_previsao_para_gerar_PC</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    !$User.Ignorar_erros__c,
    $User.ProfileId != &apos;00eU40000008oAv&apos;,
    $User.ProfileId != &apos;00e6e000002FEQZ&apos;,
    $User.ProfileId != &apos;00e6e000002FEQZ&apos;,
    NOT(ISBLANK(previsao_pc__c)),
    ISCHANGED(previsao_pc__c)
)</errorConditionFormula>
