<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Oportunidade_diferente_de_Comited</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
  ISNEW(),
  NOT(ISBLANK(Oportunidade__c)),
  NOT(ISPICKVAL(Oportunidade__r.StageName, &quot;COMITED&quot;))
)</errorConditionFormula>
    <errorDisplayField>Oportunidade__c</errorDisplayField>
    <errorMessage>❌ Só é permitido criar um Requisição de Compra quando a oportunidade estiver no estágio &quot;COMITED&quot;.</errorMessage>
</ValidationRule>
