<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>sem_contrato_e_com_produto</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
	!$User.Ignorar_erros__c,
	INCLUDES(Disponivel_p_contratos__c, &apos;Nenhum&apos;),
	Product2Id != null
)</errorConditionFormula>
    <errorDisplayField>Product2Id</errorDisplayField>
    <errorMessage>Ativo não disponível para contrato não deve ser associado a produto.</errorMessage>
</ValidationRule>
