<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Antecedencia</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    !$User.Ignorar_erros__c,
    $User.ProfileId != &apos;00e6e000002JQWW&apos;,
    ISNEW(),
    (Data_Inicial__c - TODAY()) &lt; 15

)</errorConditionFormula>
    <errorDisplayField>Data_Inicial__c</errorDisplayField>
    <errorMessage>As férias devem ser solicitadas com no mínimo 15 dias de antecedência.</errorMessage>
</ValidationRule>
