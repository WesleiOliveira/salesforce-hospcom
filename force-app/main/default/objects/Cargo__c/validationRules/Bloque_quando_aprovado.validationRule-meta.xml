<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Bloque_quando_aprovado</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;APROVADO&quot;),
    AND(
        $User.ProfileId &lt;&gt; &quot;00eU4000003KiUb&quot;
    )
)</errorConditionFormula>
    <errorMessage>Somente o gerente de RH pode fazer edições em um cargo aprovado.</errorMessage>
</ValidationRule>
