<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Aspas_duplas</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
!isNew(),
CONTAINS(Description , &apos;&quot;&apos;)
)</errorConditionFormula>
    <errorDisplayField>Description</errorDisplayField>
    <errorMessage>O caractere &quot; (aspas duplas) não é aceito no campo descrição. Por favor, substitua por duas aspas simples.</errorMessage>
</ValidationRule>
