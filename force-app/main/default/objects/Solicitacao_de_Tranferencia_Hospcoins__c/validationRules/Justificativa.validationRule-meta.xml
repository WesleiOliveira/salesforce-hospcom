<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Justificativa</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Rejeitado&quot;),
    ISBLANK(Justificativa_RH__c),
    ISCHANGED(Status__c)
)</errorConditionFormula>
    <errorDisplayField>Justificativa_RH__c</errorDisplayField>
    <errorMessage>Preencha a justificativa quando o status for alterado para &quot;Rejeitado&quot;.</errorMessage>
</ValidationRule>
