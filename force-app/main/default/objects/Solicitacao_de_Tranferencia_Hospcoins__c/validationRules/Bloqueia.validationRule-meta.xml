<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Bloqueia</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISNEW()),
    ISPICKVAL(PRIORVALUE(Status__c), &quot;Aprovado&quot;),
    NOT(ISPICKVAL(Status__c, &quot;Aprovado&quot;))
)</errorConditionFormula>
    <errorMessage>Este registro não pode ser editado pois o status está como &quot;Aprovado&quot;.</errorMessage>
</ValidationRule>
