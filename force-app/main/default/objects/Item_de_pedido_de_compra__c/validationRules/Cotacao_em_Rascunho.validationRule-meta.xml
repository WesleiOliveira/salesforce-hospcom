<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cotacao_em_Rascunho</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
!$User.Ignorar_erros__c,
ISNEW(),
TEXT(Pedido_de_compra__r.Status__c) != &apos;1 - Rascunho&apos;
)</errorConditionFormula>
    <errorMessage>A cotação deve estar em Rascunho para inserir itens.</errorMessage>
</ValidationRule>
