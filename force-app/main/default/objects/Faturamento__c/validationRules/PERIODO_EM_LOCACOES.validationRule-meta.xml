<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PERIODO_EM_LOCACOES</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
OR(
  ISBLANK(Periodo_de_Faturamento_inicio__c) ,
  ISBLANK(Periodo_de_Faturamento_Fim__c)
),
ISBLANK(Contrato_de_servico__c)
)</errorConditionFormula>
    <errorMessage>Preencha o periodo de inicio e fim em caso de contrato de locação.</errorMessage>
</ValidationRule>
