<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>consistencia_de_viagem</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
	!$User.Ignorar_erros__c,
	 Viajante__r.Viagem__c !=  Trajeto__r.Viagem__c 
)</errorConditionFormula>
    <errorMessage>O Trajeto e Viajante selecionados devem ser da mesma Viagem.</errorMessage>
</ValidationRule>
