<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Num_parcelas_p_nao_financiamento</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
	NOT(CONTAINS(LOWER(TEXT(Forma_de_pagamento__c)), &apos;finaciamento&apos;)),
	Numero_de_prestacoes__c != null
)</errorConditionFormula>
    <errorDisplayField>Numero_de_prestacoes__c</errorDisplayField>
    <errorMessage>O número de prestações deve ser preenchido apenas para financiamentos.</errorMessage>
</ValidationRule>
