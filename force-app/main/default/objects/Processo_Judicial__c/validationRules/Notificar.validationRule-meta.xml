<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Notificar</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
TEXT(Indice_de_atualizacao__c) == &apos;&apos;,
Notificar__c == true
)</errorConditionFormula>
    <errorDisplayField>Indice_de_atualizacao__c</errorDisplayField>
    <errorMessage>Escolha um índice de atualização para ativar as notificações do processo.</errorMessage>
</ValidationRule>
