<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>km_inicial_preencher</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
	!$User.Ignorar_erros__c,
	ISBLANK(Km_inicial__c),
	TEXT(Tipo__c) == &apos;Quitação&apos;,
	TEXT(Categoria__c) == &apos;KM rodado&apos;
)</errorConditionFormula>
    <errorDisplayField>Km_inicial__c</errorDisplayField>
    <errorMessage>O Km inicial deve ser preenchido em quitação de Km rodado.</errorMessage>
</ValidationRule>
