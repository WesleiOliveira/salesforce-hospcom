<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>observacoes_evento_preencher</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
	!$User.Ignorar_erros__c,
	TEXT(Motivo__c) == &apos;Evento&apos;,
	Observacoes__c == null
)</errorConditionFormula>
    <errorDisplayField>Observacoes__c</errorDisplayField>
    <errorMessage>Preencha nas observações os detalhes do evento.</errorMessage>
</ValidationRule>
