<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Data_da_Demo_Limite</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISNEW(),
!$User.Ignorar_erros__c,
(Data_da_demonstracao__c - TODAY()) &lt; 2,
 RecordType.DeveloperName != &apos;Demonstra_o_R_pida&apos;
)</errorConditionFormula>
    <errorMessage>A data da demonstração não pode ser inferior a 2 dias a partir de hoje.</errorMessage>
</ValidationRule>
