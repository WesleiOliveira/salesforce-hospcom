<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>tecniconaomudastatus</fullName>
    <active>true</active>
    <description>Técnico não muda status ag. peças</description>
    <errorConditionFormula>AND(
    ISPICKVAL(Status, &quot;AGUARDANDO PEÇA&quot;),
    $Profile.Name = &quot;Técnico&quot;
)</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>Você não pode mudar o status para aguardando peças</errorMessage>
</ValidationRule>
