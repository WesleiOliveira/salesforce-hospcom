<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Opp_impugnar_sem_itens</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
	!$User.Ignorar_erros__c,
	Text(Necess_rio_Impugnar__c) == &apos;SIM&apos;,
	Itens_a_Impugnar__c == &apos;&apos;
)</errorConditionFormula>
    <errorDisplayField>Itens_a_Impugnar__c</errorDisplayField>
    <errorMessage>Oportunidade a impugnar deve ter os itens preenchidos.</errorMessage>
</ValidationRule>
