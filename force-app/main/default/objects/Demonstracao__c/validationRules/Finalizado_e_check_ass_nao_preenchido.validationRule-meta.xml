<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Finalizado_e_check_ass_nao_preenchido</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    RecordType.Name == &apos;Demonstração&apos;,
    !$User.Ignorar_erros__c,
    TEXT(Status__c) == &apos;Finalizado&apos;,
    Checklist_assinado__c ==  false
)</errorConditionFormula>
    <errorDisplayField>Checklist_assinado__c</errorDisplayField>
    <errorMessage>O Checklist assinado deve ser anexado, e seu campo marcado, para finalização da demonstração.</errorMessage>
</ValidationRule>
