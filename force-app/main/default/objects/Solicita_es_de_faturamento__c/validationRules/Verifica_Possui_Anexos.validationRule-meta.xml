<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Verifica_Possui_Anexos</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Finalizado&quot;),
    NOT(Possui_anexos__c),
    DATEVALUE(CreatedDate) &gt;= DATE(2025, 3, 13)
)</errorConditionFormula>
    <errorMessage>A solicitação de faturamento deve possuir anexos. Verifique antes de finalizar.</errorMessage>
</ValidationRule>
