<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prazo_de_finalizacao</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
!$User.Ignorar_erros__c,
$User.Id !=  CreatedById,
ISCHANGED(Prazo_de_Finalizacao__c)
)</errorConditionFormula>
    <errorDisplayField>Prazo_de_Finalizacao__c</errorDisplayField>
    <errorMessage>Você não pode alterar o prazo de finalização</errorMessage>
</ValidationRule>
