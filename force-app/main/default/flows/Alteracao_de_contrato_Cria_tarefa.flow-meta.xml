<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <environments>Default</environments>
    <formulas>
        <name>numerodocontrato</name>
        <dataType>String</dataType>
        <expression>IF(!ISNULL({!$Record.Cotacao__c}), &apos; de venda &apos; + {!$Record.Cotacao__r.QuoteNumber},
IF(!ISNULL({!$Record.Contrato_de_Servico__c}), &apos; de serviço/locação &apos; + {!$Record.Contrato_de_Servico__r.N_mero_da_Proposta_Contrato__c},
IF(!ISNULL({!$Record.Ordem_de_trabalho__c}), &apos; de serviço &apos; + {!$Record.Ordem_de_trabalho__r.WorkOrderNumber},
IF(!ISNULL({!$Record.Comodato__c}), &apos; de comodato &apos; + {!$Record.Comodato__r.Name},
IF(!ISNULL({!$Record.Demonstracao__c}), &apos; de demonstração &apos; + {!$Record.Demonstracao__r.OrderNumber}
, &apos;&apos;)))))</expression>
    </formulas>
    <formulas>
        <name>prazoTarefa</name>
        <dataType>Date</dataType>
        <expression>IF(WEEKDAY({!$Flow.CurrentDate}) = 5 , {!$Flow.CurrentDate} + 4,
IF(WEEKDAY({!$Flow.CurrentDate}) = 6, {!$Flow.CurrentDate} + 4,
{!$Flow.CurrentDate} + 2))</expression>
    </formulas>
    <interviewLabel>Alteração de contrato - Cria tarefa {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Alteração de contrato — Cria tarefa</label>
