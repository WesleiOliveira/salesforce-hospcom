<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Financeiro_Geral</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Sistema_todos</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Account</field>
        <field>TotalAmount</field>
        <field>EffectiveDate</field>
        <field>Prazo_de_entrega__c</field>
        <field>Faturamento_Feito__c</field>
        <field>Forma_de_pagamento2__c</field>
        <field>Condicao_de_pagamento__c</field>
        <field>Frete__c</field>
        <field>Opportunity</field>
        <field>Ordem_de_trabalho__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>fernanda.pereira@hospcom.net</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lorrayne.rodrigues@hospcom.net</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Order.Forma_de_pagamento2__c</field>
                <operation>notEqual</operation>
                <value>checkout-cielo</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Financeiro</label>
        <name>Financeiro</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Aprova_o_de_pedido</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Order.Status</field>
            <operation>equals</operation>
            <value>Aguardando Aprovação Financeira,Pendente</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>Venda Commerce</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>A_o_interna_verdadeiro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Pedido_aprovado</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Aguardando_Apr_Comercial</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusCommerce</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>A_o_interna_verdadeiro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Pedido_reprovado</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Reprovado</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>A_o_interna_verdadeiro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Aprovado2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Enviar_falso</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Financeiro Commerce</label>
    <processOrder>10</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
