<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Departamento_de_Compras</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Descricao__c</field>
        <field>Data_de_inicio__c</field>
        <field>Owner</field>
        <field>CreatedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>gerencia.compras@hospcom.net</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Gerente de Compras</label>
        <name>Gerente_de_Compras</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>administrativo@hospcom.net</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Pedido_de_compra__c.Tipo__c</field>
                <operation>equals</operation>
                <value>Compra para consumo</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Diretor Administrativo</label>
        <name>Diretor_Administrativo</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>alberth.oliveira@hospcom.net</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Pedido_de_compra__c.Tipo__c</field>
                <operation>equals</operation>
                <value>Compra para estoque,Compra para revenda,Compra para revenda OPME</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Supervisor de Operações</label>
        <name>Supervisor_de_Operacoes</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>gabriel@hospcom.net</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Pedido_de_compra__c.Tipo__c</field>
                <operation>equals</operation>
                <value>Compra para estoque,Compra para revenda,Compra para revenda OPME</value>
            </criteriaItems>
        </entryCriteria>
        <label>Diretor de Negócios</label>
        <name>Diretor_de_Neg_cios</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Valores acima de R$100.000,00 e abaixo de R$500.000</description>
    <emailTemplate>unfiled$public/Decisao_de_compra</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Pedido_de_compra__c.Valor_total_cotado__c</field>
            <operation>greaterThan</operation>
            <value>&quot;BRL 100,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>Pedido_de_compra__c.Status__c</field>
            <operation>equals</operation>
            <value>1 - Rascunho,2 - Em Andamento,5 - Reprovado</value>
        </criteriaItems>
        <criteriaItems>
            <field>Pedido_de_compra__c.Valor_total_cotado__c</field>
            <operation>lessOrEqual</operation>
            <value>&quot;BRL 500,000&quot;</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Status_Em_AprFinanceira</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Status_Reprovado</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Ag_Decisao_Compra</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Alçada II</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
