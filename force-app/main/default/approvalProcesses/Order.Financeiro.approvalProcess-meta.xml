<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Financeiro_Geral</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Sistema_todos</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Account</field>
        <field>TotalAmount</field>
        <field>EffectiveDate</field>
        <field>Prazo_de_entrega__c</field>
        <field>Faturamento_Feito__c</field>
        <field>Forma_de_pagamento2__c</field>
        <field>Condicao_de_pagamento__c</field>
        <field>Frete__c</field>
        <field>Opportunity</field>
        <field>Ordem_de_trabalho__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>fernanda.pereira@hospcom.net</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lorrayne.rodrigues@hospcom.net</name>
                <type>user</type>
            </approver>
            <approver>
                <name>thiago.oliveira@hospcom.net</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Financeiro</label>
        <name>Financeiro</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Aprova_o_de_pedido</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4</booleanFilter>
        <criteriaItems>
            <field>Order.Status</field>
            <operation>equals</operation>
            <value>Rascunho,Pendente,Reprovado</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Departamento3__c</field>
            <operation>notEqual</operation>
            <value>Locação</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>Hospcom,OPME - Zimmer</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Natureza_de_Opera_o__c</field>
            <operation>notEqual</operation>
            <value>BONIFICAÇÃO,REMESSA DE LOCAÇÃO,REMESSA DE COMODATO,REMESSA EM CONSIGNAÇÃO,REMESSA DE TROCA</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>A_o_interna_verdadeiro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Enviar_verdadeiro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Aguardando_Apr_Comercial</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>A_o_interna_verdadeiro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Pedido_reprovado</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Reprovado</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>A_o_interna_verdadeiro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ag_Apr_Financ</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Enviar_falso</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Financeiro</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Status_Rascunho</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
