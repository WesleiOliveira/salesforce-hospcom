<apex:page controller="ListaItensZerados" applyHtmlTag="true" showHeader="false"> 

    <body style="width:100%; height:100%; ">
    
        <table cellspacing="0px" cellpadding="0px" border="0px" style="height:100%; width:100%;border:1px solid black;">

            <tr><td style="height:12px;"></td></tr>
            <tr><td>Itens de Linha sem Valor</td></tr>
            <tr><td style="height:10px;"></td></tr>

            <tr>
                <td>
                
                    <apex:variable var="quantidade" value="{!0}"/>
                    <apex:repeat value="{!lista}" var="registro">
                        <apex:variable var="quantidade" value="{!quantidade+1}"/>
                    </apex:repeat>

                    <apex:outputText rendered="{!IF(quantidade == 0, true, false)}" >
                        <table style="width:100%; height:100%">
                            <tr>
                                <td>Sem Itens</td>
                            </tr>
                        </table>
                    </apex:outputText>
                    
                                    
                </td>
            </tr>
            
            <tr>
                <td style="height:33px;" ></td>
            </tr>
        </table>
    </body>
</apex:page>