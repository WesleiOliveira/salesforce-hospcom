<apex:page standardController="Fornecedor__c" extensions="AssistenteTomadaPrecos" showHeader="false" showChat="false" standardStylesheets="false" docType="html-5.0">
    <html>
        <head>
            <title>Tomada de Preço</title>
            <meta   charset="utf-8" />
            <meta   name="viewport" content="width=device-width, initial-scale=1" />
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
            <link   href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css" rel="stylesheet"/>
            <link   href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.min.css" rel="stylesheet"/>
            <script src="{!URLFOR($Resource.bootstrap3iso, 'js/bootstrap.min.js')}"></script>
            <link   href="{!URLFOR($Resource.bootstrap3iso, 'css/bootstrap.min.css')}" rel="stylesheet"/>
            <link   rel="stylesheet" href="{!$Resource.breadcrumb}" />

            <style>
                .cabecalho-principal{
                    background-color: #f2f7ff!important;
                    padding:4px!important;
                    text-align:center!important;
                    font-size:22px!important;
                    font-weight:bold!important;
                }
                .cabecalho-secundario-a{
                    background-color: #fdfdfd!important;
                    text-align:center!important;
                    padding:5px!important;
                    border-bottom: 1px solid #ddd!important;
                }
                .cabecalho-secundario-b{
                    padding:7px!important;
                    font-size:18px!important;
                }
                .barra-navegacao{
                    padding:8px!important;
                }

                .tabela-cabecalho{
                    border-top: 2px solid #ddd!important;
                }
                .item-cabecalho{
                    font-weight:bold!important;
                    font-size:12px!important;
                }
                .item-descricao{
                    font-size:11.5px!important;
                    border-top-width:1px!important;
                }
                .item-descricao:hover{
                    background-color:#f5f5f5;
                }
                .item-pai{
                    background-color:#f9f9f9;
                }
                .datepicker{ 
                    z-index:9999!important;
                    position:relative;
                }
                .alert{
                    font-weight:bold!important;
                    padding-top:10px!important;
                    padding-bottom:10px!important;
                }
            </style>
            <script>    
                $(document).ready(function(){
                    // reposiciona botões de campos de pesquisa
                    $(".campo-pesquisa").each(function(){
                        $(this).find("span").addClass("input-group");
                        $(this).find("input[type*='text']").addClass("form-control input-sm");
                        $(this).find("a").addClass("input-group-btn");
                        $(this).find("a").html("<div class=\"btn btn-sm btn-default\"><i class=\"glyphicon glyphicon-search\"></i></div>");
                    });
                });
            </script>
        </head>

        <body style="margin-top:7px;">
            <div class="bootstrap-iso">
                <div class="container-fluid">
                    <apex:form >

                        <!-- painel -->
                        <div class="panel panel-default">

                            <!-- painel: cabeçalho -->
                            <div class="panel-heading cabecalho-principal">
                                Tomada de Preço
                            </div>
                            <div class="panel-body cabecalho-secundario-a">
                                <div class="cabecalho-secundario-b">{!etapa[1]}</div>
                            </div>

                            <!-- painel: corpo -->
                            <div class="panel-body">
                            
                                <!-- erros -->
                                <apex:outputText rendered="{!IF(tem_erros == true, true, false)}" >
                                    <apex:variable var="cont_msg" value="{!0}"/>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="alert alert-danger alert-dismissible">
                                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                <apex:repeat value="{!erros}" var="erro">
                                                    <apex:variable var="cont_msg" value="{!cont_msg+1}"/>
                                                    <apex:outputText rendered="{!IF(cont_msg > 1, true, false)}" >
                                                        <br/>
                                                    </apex:outputText>
                                                    {!erro}
                                                </apex:repeat>
                                            </div>                      
                                        </div>
                                    </div>
                                    <br/>
                                </apex:outputText>

                                <!-- corpo: pedido -->
                                <!-- fornecedor -->
                                <!-- fixo -->
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label>Cotação {!fornecedor.Pedido_de_compra__r.Name}:  </label>&nbsp;
                                        {!fornecedor.Pedido_de_compra__r.Descricao__c}
                                    </div>
                                    <div class="col-xs-6">
                                        <label>Fornecedor {!fornecedor.Name}:</label>&nbsp;
                                        {!fornecedor.Fornecedor__r.Raz_o_Social__c}
                                    </div>
                                </div>
                                <!-- editável -->
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label>Condicoes de Pagamento:</label>
                                        <apex:inputField value="{!fornecedor.Forma_de_pagamento__c}" html-placeholder="Forma de pagamento..." styleClass="form-control input-sm" required="true"/>
                                        <apex:inputField value="{!fornecedor.Descricao_do_pagamento__c}" html-placeholder="Detalhes do pagamento..." styleClass="form-control input-sm" required="true"/>
                                    </div>
                                    <div class="col-xs-6">
                                        <label>Prazo Prometido:</label>
                                        <apex:inputField value="{!fornecedor.Prazo_de_recebimento__c}" styleClass="form-control input-sm datepicker" showDatePicker="true" required="true"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label>Tipo de Frete:</label>
                                        <apex:inputField value="{!fornecedor.Tipo_de_Frete__c}" styleClass="form-control input-sm" required="true"/>
                                    </div>
                                    <div class="col-xs-6 campo-pesquisa">
                                        <label>Transportadora:</label>
                                        <apex:inputField value="{!fornecedor.Transportadora__c}"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label>Valor do Frete:</label>
                                        <apex:inputField value="{!fornecedor.Valor_do_frete__c}" styleClass="form-control input-sm" required="false"/>
                                    </div>
                                </div>
                                <br/>

                                <!-- filtro  -->
                                <div class="row">
                                    <div class="col-xs-offset-2 col-xs-8" style="text-align:center;">
                                        <div class="input-group">
                                            <span class="input-group-addon">Filtrar</span>
                                            <input type="text" placeholder="P/N, nome, modelo, etc..." class="form-control input-md" id="caixa-pesquisa" />
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                
                                <!-- itens de fornecedor -->
                                <div class="row">
                                    <div class="col-xs-12">
                                    
                                        <apex:outputText rendered="{!IF(tem_produtos == false, true, false)}" >
                                            <div class="alert alert-info">
                                                Ainda não foram selecionados itens para cotação com este fornecedor.
                                            </div>                      
                                        </apex:outputText>

                                        <apex:outputText rendered="{!IF(tem_produtos == true, true, false)}" >
                                            <table class="table table-condensed" style="width:100%;" id="lista-itens" >

                                                <!-- cabeçalho -->
                                                <thead class="tabela-cabecalho">
                                                    <tr>
                                                        <th>P/N</th>
                                                        <th>Img</th>
                                                        <th>Nome</th>
                                                        <th>Modelo</th>
                                                        <th>Marca</th>
                                                        <th>Qtd.</th>
                                                        <th>Valor Un. Última Compra</th>
                                                        <th>Valor Unitário</th>
                                                    </tr>
                                                </thead>

                                                <!-- itens -->
                                                <apex:repeat value="{!itens_fornecedor}" var="item_fornecedor">
                                                    <tbody class="item-descricao">
                                                        <tr>
                                                            <td><apex:outputField value="{!item_fornecedor.Codigo_do_produto__c}"/></td>
                                                            <td><img src="{!item_fornecedor.Item_de_pedido_de_compra__r.Produto__r.URL_da_Imagem__c}" style="width:40px;height:40px;" /></td>
                                                            <td class="item-cabecalho"><apex:outputField value="{!item_fornecedor.Produto__c}"/></td>
                                                            <td><apex:outputField value="{!item_fornecedor.Modelo__c}"/></td>
                                                            <td><apex:outputField value="{!item_fornecedor.Marca__c}"/></td>
                                                            <td><apex:outputField value="{!item_fornecedor.Quantidade__c}"/></td>
                                                            <td>
                                                            <apex:outputField rendered="{!IF(item_fornecedor.Fornecedor__r.Tipo__c != "Compra para consumo", true, false)}" value="{!item_fornecedor.Valor_unit_da_ultima_compra__c}" styleClass="form-control input-sm"/>
                                                            <apex:inputField rendered="{!IF(item_fornecedor.Fornecedor__r.Tipo__c == "Compra para consumo", true, false)}" value="{!item_fornecedor.Valor_unit_da_ultima_compra__c}" styleClass="form-control input-sm"/>
                                                            </td>
                                                            <td><apex:inputField value="{!item_fornecedor.Valor_unitario__c}" styleClass="form-control input-sm"/></td>
                                                        </tr>
                                                    </tbody>
                                                </apex:repeat>
                                            </table>
                                        </apex:outputText>

                                    </div>
                                </div>

                            </div>

                            <!-- painel: rodapé -->
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-xs-offset-4 col-xs-2">
                                    </div>
                                    <div class="col-xs-2">
                                        <apex:outputText rendered="{!IF(etapa[0] == 'preço', true, false)}" >
                                            <apex:commandButton styleClass="btn btn-default" style="width:100%;" action="{!Efetiva}" value="Terminar"/>
                                        </apex:outputText>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </apex:form>
                </div>
            </div>
            <script>
                // inicializa campos de filtro
                $("#caixa-pesquisa").val("");
                $("#caixa-pesquisa").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#lista-itens tbody").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });

                $(document).ready(function(){
                    // inicializa calendários em campos data
                    $(".datepicker").datepicker({
                        dateFormat: 'dd/mm/yy'
                    });
                })
            </script>
        </body>
    </html>
</apex:page>