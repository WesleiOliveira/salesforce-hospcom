                                <br/>CNPJ: {!order.Account.CNPJ__c} 
                            </apex:outputText>
                            <apex:outputText rendered="{!if(order.Account.RecordType.Name != 'Conta comercial',true,false)}">
                                <br/>NOME: {!order.Account.Name}
                                <br/>CPF: {!order.Account.CPF__pc}
                            </apex:outputText>
