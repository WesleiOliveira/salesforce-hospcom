<apex:page standardController="Opportunity" renderAs="pdf" applyHtmlTag="false" showHeader="false">

    <head>
        <style type="text/css">
            .box{
                text-transform: uppercase;
                font-size:12px;
                border:1px gray dashed;
                width: 80%;
            }
            .unico{
                text-align: justify;
                //white-space:pre-wrap;
            }
        </style>
    </head>

    <apex:repeat value="{!Opportunity.OpportunityLineItems}" var="Item">
        <apex:outputText rendered="{!IF(Item.Descricao_a_linha__c != '',true,false)}" >
            <div class="box unico">{!Item.Descricao_a_linha__c}</div>
        </apex:outputText>
    </apex:repeat>
    
</apex:page>