<apex:page controller="ListaItensZerados" applyHtmlTag="false" showHeader="false"> 
    <head>
        <style type="text/css">
            html, body    {
                height: 100%;
            }
            .titulo{
                font-family:arial, verdana, sans-serif;
                font-size:16px;
                font-weight:bold;
            }
            .quadro{
                height:100%;
                border:1px solid #d4d4d4;
                border-radius:9px;
                vertical-align:top;
            }
            .cabecalho{
                font-family:arial, verdana, sans-serif;
                font-size:13px;
                font-weight:bold;
                border-bottom:1px solid #d4d4d4;
            }
            .celulas{
                font-family:arial, verdana, sans-serif;
                font-size:12px;
                padding: 2px 0px 2px 3px;
                color:#6f6f6f;
            }     
            .mensagem{
                font-family:arial, verdana, sans-serif;
                font-size:12px;
                color:#a0acbf;
                vertical-align:middle;
                text-align:center;
                font-weight:bold;
            }
        </style>
    </head>
    <body>
    
        <table cellspacing="0px" cellpadding="0px" border="0px" style="height:100%; width:100%;">

            <tr><td style="height:12px;"></td></tr>
            <tr><td class="titulo">Itens de Linha sem Valor</td></tr>
            <tr><td style="height:10px;"></td></tr>

            <tr>
                <td class="quadro">
                
                    <apex:variable var="quantidade" value="{!0}"/>
                    <apex:repeat value="{!lista}" var="registro">
                        <apex:variable var="quantidade" value="{!quantidade+1}"/>
                    </apex:repeat>

                    <apex:outputText rendered="{!IF(quantidade == 0, true, false)}" >
                        <table style="width:100%; height:100%">
                            <tr>
                                <td class="mensagem">Sem Itens</td>
                            </tr>
                        </table>
                    </apex:outputText>
                    
                    
                    <apex:outputText rendered="{!IF(quantidade != 0, true, false)}" >
                        <table style="width:100%;">
                            <tr>
                                <td class="cabecalho">Respons√°vel:</td>
                                <td class="cabecalho">OT</td>
                                <td class="cabecalho">Item</td>
                            </tr>
                            <apex:repeat value="{!lista}" var="registro">
                                <tr>
                                    <td class="celulas">{!registro.WorkOrder.T_cnico_Respons_vel__c}</td>
                                    <td class="celulas">{!registro.WorkOrder.WorkOrderNumber}</td>
                                    <td class="celulas"><a href="/{!registro.id}">{!registro.PricebookEntry.Product2.Name}</a></td>
                                </tr>
                            </apex:repeat>
                        </table>
                    </apex:outputText>
                
                </td>
            </tr>
            
            <tr>
                <td style="height:33px;" ></td>
            </tr>
        </table>
    </body>
</apex:page>