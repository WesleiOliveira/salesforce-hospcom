                                <apex:selectOption itemValue="Pais" itemLabel="Pais" />
                                <apex:selectOption itemValue="Irmã(o)" itemLabel="Irmã(o)" />
                                <apex:selectOption itemValue="Cuidador Particular" itemLabel="Cuidador Particular" />                               
                            </apex:selectList>
                    </div>
                    </div><br/>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-4 "> Outros — PTS	
                            <apex:inputText size="1" style="resize:none;" styleClass="form-control" value="{!outrosPTS}"/>                        
                        </div>
                        <div class="col-sm-4 ">Outros — Grau de Parentesco
                            <apex:inputText size="1" style="resize:none;" styleClass="form-control" value="{!outrosGrauParent}"/>                        
                        </div>
                    </div><br/>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-4 "> Prazo/Meta	
                            <apex:selectList size="1" style="resize:none;" styleClass="form-control"  value="{!prazo}">
