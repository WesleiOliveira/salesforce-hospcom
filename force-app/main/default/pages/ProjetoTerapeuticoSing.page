                            </apex:selectList>
                        </div>
                        <div class="col-sm-4 ">História Biopsicossocial	
                            <apex:inputTextarea rows="4" style="resize:none;" styleClass="form-control" value="{!historiaBioPsico}"/>            
                        </div>
                    </div><br/>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-4 "> Outros Dispositivos	
                            <apex:inputText size="1" style="resize:none;" styleClass="form-control" value="{!outrosDisposit}"/>                        
                        </div>
                    </div><br/>
                    <div class="row">
                    <div class="col-sm-offset-2 col-sm-4 "> Projeto Terapêutico Singular		
							<apex:selectList multiselect="true" size="4" style="resize:none;" styleClass="form-control" value="{!PTS}">
                                <apex:selectOption itemValue="Orientação / Capacitação Paciente/Familiar" itemLabel="Orientação / Capacitação Paciente/Familiar" />
                                <apex:selectOption itemValue="Suporte Ventilatório / Respiratório" itemLabel="Suporte Ventilatório / Respiratório" />
                                <apex:selectOption itemValue="Suporte Nutricional" itemLabel="Suporte Nutricional" />
                                <apex:selectOption itemValue="Desmame Ventilatório" itemLabel="Desmame Ventilatório" />
                                <apex:selectOption itemValue="Vigilância Infecciosa" itemLabel="Vigilância Infecciosa" />
