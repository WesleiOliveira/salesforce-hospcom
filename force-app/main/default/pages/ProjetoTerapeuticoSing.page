                                <apex:selectOption itemValue="Cânula de Traqueostomia Plástica" itemLabel="Cânula de Traqueostomia Plástica" />
                                <apex:selectOption itemValue="Bomba de Infusão" itemLabel="Bomba de Infusão" />                                
                                <apex:selectOption itemValue="Suporte de Oxigênio" itemLabel="Suporte de Oxigênio" />                                
                                <apex:selectOption itemValue="Ventilação Mecânica Não Invasiva" itemLabel="Ventilação Mecânica Não Invasiva" />                                
