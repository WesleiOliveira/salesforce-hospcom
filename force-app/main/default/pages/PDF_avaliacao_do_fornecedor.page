*{
   font-family:arial, verdana, sans-serif !important;
}
            .titulo-secao{
               font-family:arial, verdana, sans-serif;
               font-size:15px;
               text-align:left !important;
               
               width:100%;
               padding:10px 0;
               background-color:#fff;
               color:#0b3353;
               margin-top:10px;
            }
            .titulo{
               font-family:arial, verdana, sans-serif;
               font-size:15px;
               text-align:center;
               
               
               padding:10px;
               background-color:;
               color:#0b3353;
            }
            table{
               border-collapse: collapse;
               /*border:none !important ;*/
               width: 100%;
               margin-bottom:0px;
            }
            .cabecalho-tabela{
               background:#fff;
               border: 1px solid #000 ;
               text-align:center;
               font-weight: 900;
            }
            .corpo-tabela{
               background:#fff;
            }
            
            tr{
               width:100%;      
            }
            h3{
               color:#0b3353;
               margin:0;
               padding:0;   
               text-align:center !important; 
               font-size: 14px;  
            }
            h2{
               font-size: 14px;
               color:#0b3353;
               font-family:arial, verdana, sans-serif;
            }
            td{
            /* border: 1px solid black !important;*/
               text-align:center;
               padding: 5px;
               font-family:arial, verdana, sans-serif;
               font-size:11.5px;
               }
            tr,td{
            
               }
            table tr.cabecalho-tabela td {           
               border: 1px solid #000 ;
               margin:0;
            }
            
            
            .tabela_geral{
               border-collapse:collapse;
               width:100%;
            }
            table.print-friendly tr td, table.print-friendly tr th {
               page-break-inside: avoid;
            }
            .cabecalho{
               font-family:arial, verdana, sans-serif;
               font-size:11px;
               
               vertical-align:top;
               background-color: #c3c3c3;
               padding: 3px;
            }
            .celula{
               font-family:arial, verdana, sans-serif;
               font-size:13px;
               vertical-align:top;
               line-height:120%;
               padding: 3px;
               border: 1px solid #c3c3c3;
            }
            .clausula_texto{
               font-family:arial, verdana, sans-serif;
               font-size:11.5px;
               text-align:justify;
               text-justify:inter-word;
               line-height:120%;
               text-indent:50px;
               vertical-align:top;
            }
            .infos_texto{
               font-family:arial, verdana, sans-serif;
               font-size:11.5px;
               text-align:justify;
               text-justify:inter-word;
               line-height:120%;
               vertical-align:top;
               border: none;
            }
            .pre_texto{
               white-space: pre;
            }
            .maiuscula{
               text-transform: uppercase;
            }
            .zebra{
               background-color: #f3f3f3;
            }
            
            .assinaturas{
            display:flex;
         
            flex-direction:row;
            padding:0;
               margin:0;
            }
            .assinatura{
               width:100%;
               padding:0;
               margin:0;
            }
            .underline{
               padding:0;
               margin:0 auto;
               width:55%;
               height:1px;
               border-top:1px solid #000;
            }
