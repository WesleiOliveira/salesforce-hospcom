<apex:page standardController="Account" extensions="ListagemIMEs_PMP" applyHtmlTag="false" showHeader="false" renderAs="pdf">
         
<head>
   
<style type="text/css" media="print">
            @page {
               size:21cm 29.7cm;
               margin:100px 40px 60px 40px;
