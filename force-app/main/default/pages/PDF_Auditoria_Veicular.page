<apex:page standardController="X5S__c" extensions="ListagemIMEs_PMP,PegaUrlImagemAnexada" applyHtmlTag="false" showHeader="false" renderAs="pdf">

    <head>
        <style type="text/css" media="print">
            @page {
                size: 21cm 29.7cm;
                margin: 100px 40px 60px 40px;

                @top-center {
                    content: element(header);
                }

                @bottom-center {
                    content: element(footer);
                }
            }

            *{
                font-family: sans-serif !important;
             
            }
            
            @page {
                size: A4;
                background:url({!$Resource.TimbradoHospcom});
                margin: 150px 20px 120px 20px;

                @bottom-center {
                    content: element(footer);
                }
            }

            .pagenumber:before {
                content: counter(page);
            }

            .pagecount:before {
                content: counter(pages);
            }

            div.header {
                margin: 0px 0px 0px 0px;
                padding: 20px 0px 20px 0px;
                position: running(header);
                height: 60px;
            }

            div.footer {
                margin: 0px 0px 0px 0px;
                padding: 20px 0px 20px 0px;
                position: running(footer);
                height: 20px;
                text-align: right;
                font-family: arial, verdana, sans-serif;
                font-size: 10px;
                font-weight: normal;
            }
            .image-grid {
                display: grid;
                gap: 10px; /* Espaço entre as imagens */
                justify-content: center; /* Centraliza o grid */
                align-items: center; /* Centraliza verticalmente */
                text-align: center; /* Alinha o conteúdo no centro */
                width: 100%;
                padding: 20px;
            }
            
         
            
                  
            
        </style>
        <style type="text/css" media="print">
         
            
           table{
               width:100%;
                       border-collapse: collapse;
           }
           
           td{
               color:#1a3f60 ;
                  
           }
           
           tr, td{
               border:1px solid #626363;
               padding: 5px 2px;
                 border-collapse: collapse;
           }
           
           .topico{
               /*background:blue;*/
               width: 20%;
           }
           
           
           .valor{
               width:5%;               
               color:#1a3f60 ;
               text-align: center;
           }
           .sessao{
               text-align: center;
               background: #1a365f;
               color: #fff;
              
           }
           
           .container, .valor_cabecalho {
               border:none;
           }
           .valor_cabecalho{
               color:#1a3f60;
               padding:0;
           }
           .container{
               font-size: 16px !important; 
               
           }
           .dado_auditoria{
                font-weight: 900;
           }           
        </style>
    </head>

