                        Informações Pessoais
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-4 ">
                            <apex:inputText style="resize:none;" styleClass="form-control" html-placeholder="Nome" value="{!Nome}" />
                        </div>
                        <div class="col-sm-4 ">
                            <apex:inputText style="resize:none;" styleClass="form-control" html-placeholder="Sobrenome" value="{!Sobrenome}" />
                        </div>
                        <br/>
                        <br/>
                    </div>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-8 "> 
                                <apex:selectList size="1" style="resize:none;" styleClass="form-control nacionalidadeInput" value="{!Nacionalidade}">
                                <apex:selectOption itemValue="" itemLabel="— Nacionalidade" />
                                <apex:selectOption itemValue="Brasileira" itemLabel="Brasileira" />
                                <apex:selectOption itemValue="Outras" itemLabel="Outras" />
                            </apex:selectList>
                        </div>
                        </div>
                    <br/>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-4" style="display: flex">
                            <div class="col-md-4" style="padding: 0px; justify-content: center;">
                                <span style="width: 100%; height: 100%;display: flex; align-items: center;">Data de nascimento</span>
                            </div>

                            <div class="col-md-8" style="padding: 0px;">
                                <apex:input type="date" style="resize:none;" styleClass="form-control" html-placeholder="Data de Nascimento" value="{!dataNasc}"
                                />
                            </div>
                        </div>
                        <div class="col-sm-4 ">
                            <apex:inputText style="resize:none;" styleClass="form-control telefoneInput" html-placeholder="Telefone" value="{!telefone}"
                            />
                        </div>
                        <br/>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-4">
                            <apex:inputText style="resize:none;" styleClass="form-control cpfInput" html-placeholder="CPF" value="{!CPF}" />
                        </div>
                        <div class="col-sm-4 ">
                            <apex:inputText style="resize:none;" styleClass="form-control" html-placeholder="Endereço" value="{!Endereco}" />
                        </div>
                        <br/>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-4 ">
                            <apex:inputText style="resize:none;" styleClass="form-control rgInput" html-placeholder="RG" value="{!RG}" />
                        </div>
                        <div class="col-sm-4 ">
                            <apex:inputText style="resize:none;" styleClass="form-control" html-placeholder="E-mail" value="{!Email}" />
                        </div>
                        <br/>
                    </div>
                    <br/>
