<script type="text/javascript">
    $(document).ready(function () {
        // Função para aplicar ou remover as máscaras
        function aplicarMascara() {
            var nacionalidade = $(".nacionalidadeInput").val();
            
            // Se a nacionalidade for "Brasileira", aplica a máscara
            if (nacionalidade === 'Brasileira') {
                $(".cpfInput").mask('000.000.000-00', { reverse: true }); // Aplica a máscara de CPF
                $(".telefoneInput").mask('(00) 00000-0000'); // Aplica a máscara de telefone
            } else {
                $(".cpfInput").unmask(); // Remove a máscara de CPF
                $(".telefoneInput").unmask(); // Remove a máscara de telefone
            }
        }

        // Inicializa a máscara com base na nacionalidade selecionada
        aplicarMascara();

        // Quando a nacionalidade for alterada, chama a função
        $(".nacionalidadeInput").change(function () {
            aplicarMascara();
        });
    });
</script>


