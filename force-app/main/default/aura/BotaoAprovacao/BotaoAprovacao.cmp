<aura:component implements="forceCommunity:availableForAllPageTypes,force:hasRecordId">
    <aura:attribute name="record" type="Recrutamento__c"/>
    <aura:attribute name="simpleRecord" type="Recrutamento__c"/>
        <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>   
    <lightning:recordEditForm 
        recordId="{!v.recordId}"
        objectApiName="Recrutamento__c"
        onsubmit="{!c.onRecordSubmit}">
        <lightning:messages />
            <div class="slds-grid">
                <div class="slds-col slds-size_1-of-2">
                    <head><lightning:inputField aura:id="campo" value="Aprovado" fieldName="Status__c"/></head>
                </div>                
            </div>
        <h1 style="text-align:center">
        <b><lightning:button aura:id="botao" iconName="utility:approval" type="submit" label="Contratar" class="slds-button slds-button_outline-brand" disabled="false"/> 
            </b></h1>
        </lightning:recordEditForm>
<force:recordData aura:id="recordLoader"
      fields="Id,Status__c"
      recordId="{!v.recordId}"
      targetFields="{!v.simpleRecord}"
                  recordUpdated="{!c.doInit}"
      />   
    <head><h1><ui:outputText aura:id="status" value="{!v.simpleRecord.Status__c}"> </ui:outputText></h1></head>
</aura:component>