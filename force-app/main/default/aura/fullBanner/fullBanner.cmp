<aura:component extends="c.ApexHelper" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="setMeOnInit" type="String" default="default value" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="produtosObj" type="Object[]" default="{!c.soql}" />
    <aura:attribute name="objectField" type="String" />
    
    <ltng:require
                  styles="{!join(',',
                          $Resource.fontAwesome + '/css/font-awesome.min.css',
                          $Resource.bootstrap5 + '/css/bootstrap.min.css')}"  
                  
                  scripts="{!join(',',
                           $Resource.textRoller,
                           $Resource.JQuery,
                           $Resource.popper,
                           $Resource.bootstrap5 + '/js/bootstrap.min.js')}"                  
                  afterScriptsLoaded="{!c.onRender}" />
    
    <aura:attribute name="accountRecord" type="Object"/>
    <aura:attribute name="recordLoadError" type="String"/>
    
    <force:recordData aura:id="recordLoader"
            recordId = "{!v.objectField}"
            fields = "linkImagem__c, siteTituloImagem__c, siteDescImagem__c, siteDescImagem2__c, siteDescImagem3__c"
            targetFields = "{!v.accountRecord}"
            targetError = "{!v.recordLoadError}"
            />
    
    
    <div style="position: relative; display: flex; flex-direction: column; width: 100vw!important; left: calc(-50.6vw + 50%); justify-content: center">
        <div class="col-md-12 containerFullBanner" style="">
            
            <video autoplay="true" class="vidFull" muted="true" loop="true" id="myVideo">
                <source src="{!$Resource.videoFullBanner}" type="video/mp4"/>
            </video>
            
            <div class="contentBanner gradient" style="border-radius: 0px!important; width: 100%!important; height: 100%!important; min-height: 100%; min-width: 100%"></div>
            
            <div class="contentBanner" style="background-color: rgba(0, 52, 92, 0.7)!important;  flex-direction: column;">
                <div style="display: flex; width: 100%;     height: 20%; font-size: 30px; align-items: center; justify-content: center;">
                    <div style="
                                font-size:5vh;
                                font-weight:600;
                                line-height: 1.6;
                                text-align:center;
                                color:#ffffff;
                                padding-left:20px;" class="generated-text">{!v.accountRecord.siteTituloImagem__c}
                    </div>
                </div>
                
                <div style="display: flex; padding-top: 10px; height: 10%">
                    <hr style="border-top: 3px solid #ffffff; width: 50px; margin-left: 20px; margin-top: 0; margin-bottom: 0; opacity: 1; background-color: #ffffff"/>
                </div>
                
                <div style="display: flex; width: 100%; height: 50%; flex-direction: column; padding: 10px;">
                    
                    <div class="row" style="justify-content: center; display: flex; column-gap: 20px;">
                        <div class="col-lg-4 col-md-12 textoInnerContentBlock">
                            {!v.accountRecord.siteDescImagem__c}
                        </div>
                        
                        <div class="col-lg-4 col-md-12 textoInnerContentBlock">
                            {!v.accountRecord.siteDescImagem2__c}
                        </div>
                        
                        <div class="col-lg-4 col-md-12 textoInnerContentBlock">
                            {!v.accountRecord.siteDescImagem3__c}
                        </div>
                    </div>
                    
                    
                    <!-- <div style="
                                font-size:3vh;
                                text-indent:0px;
                                letter-spacing:0px;
                                word-spacing:0px;
                                line-height: 1.6;
                                text-align:left;
                                color:#ffffff;
                                padding-left:20px;
                                padding-top: 0px;
                                margin:0px;" class="generated-text">{!v.accountRecord.siteDescImagem__c}
                    </div> -->
                </div>
            </div>
            
        </div>
    </div>
    
    
    
</aura:component>