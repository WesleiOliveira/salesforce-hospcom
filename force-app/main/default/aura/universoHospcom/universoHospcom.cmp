<aura:component extends="c.ApexHelper" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="objectField" type="String" />
    
    <ltng:require
                  styles="{!join(',',
                          $Resource.fontAwesome + '/css/font-awesome.min.css',
                          $Resource.bootstrap5 + '/css/bootstrap.min.css')}"  
                  
                  scripts="{!join(',',
                           $Resource.JQuery,
                           $Resource.sortableJs + '/Sortable.js',
                           $Resource.bootstrap5 + '/js/bootstrap.bundle.js',
                           $Resource.bootstrap5 + '/js/bootstrap.min.js')}"                     
                  afterScriptsLoaded="{!c.onRender}" />
    
    <aura:attribute name="accountRecord" type="Object"/>
    <aura:attribute name="recordLoadError" type="String"/>
    <force:recordData aura:id="recordLoader"
                      recordId = "{!v.objectField}"
                      fields = "linkImagem__c, siteTituloImagem__c, siteDescImagem__c, linkImagem2__c, linkImagem3__c, siteDescImagem2__c, siteDescImagem3__c"
                      targetFields = "{!v.accountRecord}"
                      targetError = "{!v.recordLoadError}"
                      />
    
    <div style="display: flex; width: 100%; height: 10%; font-size: 30px; align-items: center;">
        <div style="
                    font-size:4.5vh;
                    font-weight:600;
                    line-height: 1.6;
                    text-align:left;
                    padding-bottom: 20px;
                    color:#00345c;" class="generated-text">Universo Hospcom
        </div>
    </div>
    
    <div class="row" style="height: 90%">
        <div class="col-lg-4 col-md-12" style="padding-right: 50px; padding-bottom: 50px;">
            <div style="width: 100%; height: 300px; display: flex; flex-direction: column;">
                <div style="width: 100%; height: 60%; position: relative" class="divImagem">
                    
                    <img src="{!v.accountRecord.linkImagem__c}" 
                         style="width: 100%; height: 100%; object-fit: cover;
                                border-top-left-radius: 20px!important;
                                border-top-right-radius: 60px!important;
                                border-bottom-right-radius: 40px!important;
                                border-bottom-left-radius: 80px!important;"/>
                    
                    <div class="tagFlutuante">Vendas</div>
                </div>
                
                <div style="width: 100%; height: 30%; display: flex; justify-content: center; align-items: center">
                    <div style="
                                width: 80%;
                                font-size:15px;
                                text-indent:0px;
                                letter-spacing:0px;
                                word-spacing:0px;
                                line-height: 1.6;
                                text-align:center;
                                color:#00345c;
                                margin:0px;" class="generated-text">{!v.accountRecord.siteDescImagem__c}
                    </div>
                </div>
                
                <div style="width: 100%; height: 10%; display: flex; justify-content: center">
                    <button href="#" type="button" style="border-color: #a0bb31; display: flex; align-items: center; background-color: #a0bb31!important; border-radius: 180px" class="btn btn-primary">Conheça mais</button>
                </div>
                
            </div>
        </div>
        
        <div class="col-lg-4 col-md-12" style="padding-right: 50px; padding-bottom: 50px;">
            <div style="width: 100%; height: 300px; display: flex; flex-direction: column;">
                <div style="width: 100%; height: 60%; position: relative" class="divImagem">
                    
                    <img src="{!v.accountRecord.linkImagem2__c}" 
                         style="width: 100%; height: 100%; object-fit: cover;
                                border-top-left-radius: 20px!important;
                                border-top-right-radius: 60px!important;
                                border-bottom-right-radius: 40px!important;
                                border-bottom-left-radius: 80px!important;"/>
                    
                    <div class="tagFlutuante" style="">Pós Vendas</div>
                </div>
                
                <div style="width: 100%; height: 30%; display: flex; justify-content: center; align-items: center">
                    <div style="
                                width: 80%;
                                font-size:15px;
                                text-indent:0px;
                                letter-spacing:0px;
                                word-spacing:0px;
                                line-height: 1.6;
                                text-align:center;
                                color:#00345c;
                                margin:0px;" class="generated-text">{!v.accountRecord.siteDescImagem2__c}
                    </div>
                </div>
                
                <div style="width: 100%; height: 10%; display: flex; justify-content: center">
                    <button href="#" type="button" style="border-color: #a0bb31; display: flex; align-items: center; background-color: #a0bb31!important; border-radius: 180px" class="btn btn-primary">Conheça mais</button>
                </div>
                
            </div>
        </div>
        
        <div class="col-lg-4 col-md-12" style="padding-right: 50px; padding-bottom: 50px;">
            <div style="width: 100%; height: 300px; display: flex; flex-direction: column;">
                <div style="width: 100%; height: 60%; position: relative" class="divImagem">
                    <img src="{!v.accountRecord.linkImagem3__c}" 
                         style="width: 100%; height: 100%; object-fit: cover;
                                border-top-left-radius: 20px!important;
                                border-top-right-radius: 60px!important;
                                border-bottom-right-radius: 40px!important;
                                border-bottom-left-radius: 80px!important;"/>
                    
                    <div class="tagFlutuante" style="">Locação</div>
                </div>
                
                <div style="width: 100%; height: 30%; display: flex; justify-content: center; align-items: center">
                    <div style="
                                width: 80%;
                                font-size:15px;
                                text-indent:0px;
                                letter-spacing:0px;
                                word-spacing:0px;
                                line-height: 1.6;
                                text-align:center;
                                color:#00345c;
                                margin:0px;" class="generated-text">{!v.accountRecord.siteDescImagem3__c}
                    </div>
                </div>
                
                <div style="width: 100%; height: 10%; display: flex; justify-content: center">
                    <button href="#" type="button" style="border-color: #a0bb31; display: flex; align-items: center; background-color: #a0bb31!important; border-radius: 180px" class="btn btn-primary">Conheça mais</button>
                </div>
                
            </div>
        </div>
    </div>    
    
</aura:component>